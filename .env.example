# Mercado Bitcoin API Credentials
# Get your credentials from: https://www.mercadobitcoin.com.br/
MB_CLIENT_ID=your_client_id_here
MB_CLIENT_KEY=your_client_key_here

# Trading Configuration - Sell Grid
SELL_GRID_LEVELS=3              # Number of sell orders in the grid
SELL_SPREAD_PERCENT=0.01        # Spread percentage between grid levels (0.01 = 0.01%)
SLEEP_SECONDS=30                # Time in seconds between checks
MIN_BALANCE=0.00001             # Minimum BTC balance required to start trading
MIN_VALUE=0.000001              # Minimum BTC value to consider for trading
COIN_PAIR=BRLBTC                # Trading pair (BRL/BTC)

# Trading Configuration - Buy Grid (if using buy_grid.py)
BUY_GRID_LEVELS=3               # Number of buy orders in the grid
BUY_SPREAD_PERCENT=0.01         # Spread percentage between grid levels (0.01 = 0.01%)

# Note: Copy this file to .env and fill in your actual credentials
# Never commit the .env file to version control!
